{
  "//comment1": "This is the whole configuration of the GeoGirafe Viewer.",
  "//comment2": "Here, you can set the entries according to your environment.",
  "general": {
    "//comment1": "Will be used when formating numbers or dates",
    "locale": "en-US"
  },
  "languages": {
    "//comment1": "List of languages with their corresponding translation-file.",
    "de": "Mock/de.json",
    "en": "Mock/en.json",
    "fr": "Mock/fr.json",
    "//comment2": "Default language",
    "defaultLanguage": "en"
  },
  "themes": {
    "url": "Mock/themes_qfield.json",
    "defaultTheme" : "Bees QGIS server"
  },
  "basemaps": {
    "//comment1": "Display the Basemap control or not",
    "show" : true,
    "//comment2": "Name of the default basemap.",
    "defaultBasemap": "OpenStreetMap",
    "//comment3" : "special basemaps that can be activated or not",
    "OSM": true,
    "SwissTopoVectorTiles": false
  },
  "treeview": {
    "useCheckboxes": false,
    "useLegendIcons": true,
    "hideLegendWhenLayerIsDeactivated": true,
    "defaultIconSize": {
      "width": "20",
      "height": "20"
    }
  },
  "search": {
    "//comment1": "Link to the GeoMapFish-Compliant Search Service",
    "//comment2": "The muster <###SEARCHTERM###> will be replaced by the search-term",
    "url": "https://geomapfish-demo-2-8.camptocamp.com/search?limit=30&partitionlimit=5&interface=desktop&query=###SEARCHTERM###"
  },
  "print": {
    "//comment1": "Link to the GeoMapFish-Compliant Print Service",
    "url": "https://geomapfish-demo-2-8.camptocamp.com/printproxy/",
    "//comment2": "The print layout selected by default",
    "defaultLayout": "1 A4 portrait"
  },
  "selection": {
    "defaultFillColor": "#ff66667f",
    "defaultStrokeColor": "#ff3333",
    "defaultStrokeWidth": 4,
    "defaultFocusFillColor": "#ff33337f",
    "defaultFocusStrokeColor": "#ff0000",
    "defaultFocusStrokeWidth": 4
  },
  "redlining": {
    "defaultFillColor": "#6666ff7f",
    "defaultStrokeColor": "#0000ff",
    "defaultStrokeWidth": 2,
    "defaultTextSize": 12,
    "defaultFont": "Arial"
  },
  "projections": {
    "//comment1": "List of projections with their corresponding abbreviation",
    "EPSG:3857": "W-M",
    "EPSG:4326": "WGS84",
    "EPSG:2056": "LV95",
    "EPSG:25832": "EPSG:25832",
    "EPSG:25833": "EPSG:25833"
  },
  "map": {
    "srid": "EPSG:2056",
    "scales": [50000000, 10000000, 1000000, 500000, 200000, 100000, 50000, 20000, 10000, 5000, 2000, 1000, 500, 200],
    "startPosition": "2628597,1186378",
    "startZoom": "3",
    "maxExtent": "2200000,1040000,8100000,4040000",
    "constraintScales": true
  },
  "map3d": {
    "terrainUrl": "https://terrain100.geo.admin.ch/1.0.0/ch.swisstopo.terrain.3d/",
    "tilesetUrl": "https://vectortiles100.geo.admin.ch/3d-tiles/ch.swisstopo.swisstlm3d.3d/20201020/tileset.json"
  }
}
